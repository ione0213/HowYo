<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.friends.FriendsFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_friend"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs_friend"
                android:layout_width="match_parent"
                android:background="@color/gray_f5f5f5"
                android:layout_height="@dimen/profile_friend_tab"
                app:tabIndicatorColor="@color/matcha_5"
                app:tabSelectedTextColor="@color/matcha_3"
                app:tabTextColor="@color/matcha_5">

            </com.google.android.material.tabs.TabLayout>

        </androidx.viewpager.widget.ViewPager>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>