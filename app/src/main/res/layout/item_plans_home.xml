<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.yuchen.howyo.home.HomeViewModel" />

        <variable
            name="plan"
            type="com.yuchen.howyo.data.Plan" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@color/white"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_home_plan_avatar"
                    android:layout_width="@dimen/home_avatar"
                    android:layout_height="@dimen/home_avatar"
                    android:layout_marginStart="@dimen/small_padding"
                    android:scaleType="centerCrop"
                    android:elevation="1dp"
                    android:layout_marginBottom="@dimen/small_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/img_home_plan_cover"
                    app:authorData="@{viewModel.authorDataList}"
                    app:plan="@{plan}"
                    app:shapeAppearanceOverlay="@style/circle"
                    tools:src="@drawable/avatar_sample" />

                <TextView
                    android:id="@+id/text_home_plan_user_name"
                    style="@style/TextStyle2_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_padding"
                    android:ellipsize="end"
                    android:elevation="1dp"
                    android:maxWidth="@dimen/home_max_width"
                    android:maxLines="1"
                    android:text="@{plan.authorId}"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/img_home_plan_avatar"
                    app:layout_constraintTop_toTopOf="@+id/img_home_plan_avatar"
                    tools:text="traveller" />

                <TextView
                    android:id="@+id/text_home_plan_duration"
                    style="@style/TextStyle3_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_padding"
                    android:elevation="1dp"
                    app:endDate="@{plan.endDate}"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/text_home_plan_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_plan_user_name"
                    app:startDate="@{plan.startDate}"
                    tools:text="2021/10/1 - 2021/10/13" />

                <ImageView
                    android:id="@+id/img_home_plan_cover"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{String.valueOf(plan.coverPhotoUrl)}"
                    app:layout_constraintBottom_toTopOf="@+id/img_home_plan_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:src="@drawable/sample_cover"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circle" />

                <TextView
                    android:id="@+id/img_home_plan_title"
                    style="@style/TextStyle3_matcha_5_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_padding"
                    android:text="@{plan.title}"
                    android:layout_marginStart="@dimen/small_padding"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/img_home_plan_avatar"
                    app:layout_constraintTop_toBottomOf="@+id/img_home_plan_cover"
                    app:layout_goneMarginStart="@dimen/small_padding"
                    tools:text="Tokyo 2 days" />

                <ImageButton
                    android:id="@+id/button_home_plan_heart_selected"
                    android:layout_width="@dimen/plan_img_btn_smallest"
                    android:layout_height="@dimen/plan_img_btn_smallest"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_marginBottom="@dimen/small_padding"
                    android:background="@drawable/heart_selected"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginEnd="@dimen/small_padding"
                    app:layout_constraintTop_toTopOf="@+id/img_home_plan_title" />

                <TextView
                    android:id="@+id/img_home_plan_likes"
                    style="@style/TextStyle3_matcha_5_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:text="@{String.valueOf(plan.likeList.size)}"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/button_home_plan_heart_selected"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="@+id/img_home_plan_title"
                    tools:text="87" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>